---
permalink: /feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="es">
	<id>{{ site.url }}/</id>
	<title>{{ site.title }}</title>
	<subtitle>Art√≠culos diarios sobre IT y afines</subtitle>
	<updated>{{ env.DATE_NOW | date: "%Y-%m-%dT%H:%M:%SZ" }}</updated>
	<link href="{{ site.url }}/" hreflang="es" />
	<link href="{{ site.url }}/feed.xml" rel="self" />
	<author>
		<name>{{ site.author.name }}</name>
		<uri>{{ site.author.url }}</uri>
	</author>
	<icon>{{ site.url }}/images/logo.png</icon>
	<logo>{{ site.url }}/images/logo.png</logo>
	<entry>
		<id>{{ site.url }}/{{ entry.uri | slugify }}</id>
		<title><![CDATA[{{ entry.title }}]]></title>
		<summary><![CDATA[{{ entry.title }}]]></summary>
		<content>{{ entry.uri }}</content>
		<link rel="alternate" href="{{ entry.uri }}" />
		<updated>{{ env.DATE_NOW | date: "%Y-%m-%dT%H:%M:%SZ" }}</updated>
	</entry>
</feed>
